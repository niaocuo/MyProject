<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.mapper.StudentMapper">
    <insert id="insertStudent" parameterType="com.mybatis.bean.Student" useGeneratedKeys="true" keyProperty="id">
        insert into student (name,sex,tclass) values (#{name},#{sex},#{tclass})
    </insert>

    <update id="updateStudent" parameterType="com.mybatis.bean.Student" >
        update student
        <set>
               <if test="name!=null">
                   name = #{name},
               </if>
               <if test="sex!=null">
                   sex = #{sex},
               </if>
               <if test="tclass">
                   tclass = #{tclass}
               </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="deleteStudent" parameterType="int">
        delete from student where id = #{id}
    </delete>


    <select id="selectStudent" parameterType="map" resultType="com.mybatis.bean.Student">
         select * from student
        <where>
            <if test="id!=null">
                and id = #{id}
            </if>
            <if test="sex!=null">
                and sex = #{sex}
            </if>
            <if test="tclass">
                and tclass = #{tclass}
            </if>
        </where>

    </select>

    <select id="selectStudentChoose" parameterType="map" resultType="com.mybatis.bean.Student">
         select * from student where 1=1
         <choose>
             <when test="id!=null">
                 and id = #{id}
             </when>
             <when test="tclass">
                 and tclass = #{tclass}
             </when>
             <otherwise>
                 and sex = 1
             </otherwise>
         </choose>
    </select>
    
    <select id="selectStudentByIds" resultType="com.mybatis.bean.Student">
         select * from student 
         <where>
             and id in
             <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
                 #{item}
             </foreach>
         </where>
    </select>

    <resultMap id="studentResult" type="com.mybatis.bean.Student">
        <id property="id" column="id"></id>
        <result property="name" column="name"/>
        <result property="sex" column="sex"/>
        <result property="tclass" column="tclass"/>
        <collection property="testReports" javaType="list"   ofType="com.mybatis.bean.TestReport">
            <id property="id" column="tid"/>
            <result property="studentId" column="studentId"/>
            <result property="course" column="course"/>
            <result property="report" column="report"/>
        </collection>
    </resultMap>
    
    <select id="selectStudentAll" resultMap="studentResult" >
         select s.id,s.name,s.sex,s.tclass,t.id as tid ,t.studentId ,t.course,t.report from student s INNER JOIN TestReport t ON s.id = t.studentId
    </select>
</mapper>
